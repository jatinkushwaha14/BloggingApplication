<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head')%> 
    <title>Blog </title>
</head>
<body>
    <%- include('partials/nav')%>
    <div class="container">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.CovimgURL   %>" width="500px" alt="">
        <pre><%= blog.body%></pre>
    </div>
    <div class="container mt-4">
        <img src="<%= blog.createdBy.profile %>" width="100px" > <%= blog.createdBy.name %>

    </div>
    <div class="conatiner m-3">
        <h3>Comments</h3>
        <% if (locals.user) { %>
            <form action="/blog/comment/<%= blog.id %>" method="POST">
                <div class="mb-3">
                    <input type="text" class="form-control" name="content" placeholder="Enter your comment" aria-label="First name">
                </div>
                <button class="btn btn-sm btn-primary" type="submit">
                    Add
                </button>
            </form>
            <div class="conatiner m-3">
                <% comments.forEach(comment => { %>
                    <div>
                        <img src="<%= comment.createdBy.profile %>" width="100px" > <%= comment.createdBy.name %>:<pre><%= comment.content %></pre>
                    </div>
                <% }) %>

            </div>
        <% } %>


    </div>
    <%- include('partials/scripts')%> 
</body>
</html>  